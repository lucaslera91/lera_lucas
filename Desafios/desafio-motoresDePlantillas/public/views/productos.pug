html
    head 
        title Lista de productos - Pug
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
    body(class='p-2')
        div(class='d-flex mb-3')
            h1(class='text-primary d-flex align-items-center text-nowrap align-center col-8') Listado de productos 
            button(class='btn btn-secondary d-flex justify-content-center align-items-center col-3' onclick="location.href='http://localhost:8080/api/registro'") Back to form
        - if (productos.length > 0)
            table(class='container')
                tr 
                    th(class='col-4') Nombre producto
                    th(class='col-4') Precio
                    th(class='col-4') Icono
                each producto in productos
                    tr(class='border border-bottom-secondary')
                        td(class='col-4')=producto.title
                        td(class='col-4')=producto.price
                        td(class='col-4')=producto.thumbnail
        - else
            h3 No se encontro producto
            
